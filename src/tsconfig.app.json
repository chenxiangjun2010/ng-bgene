{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [
      "node"
    ],
    "paths": {
      "@shared": [
        "app/shared/index"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core": [
        "app/core/index"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@env/*": [
        "environments/*"
      ],
      "@services": [
        "app/services/index"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@domain": [
        "app/domain/index"
      ],
      "@domain/*": [
        "app/domain/*"
      ],
      "@pipes": [
        "app/pipes/index"
      ],
      "@pipes/*": [
        "app/pipes/*"
      ],

    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}